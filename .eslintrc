{
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel"
  ],
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "globals": {
    "$Keys": true,
    "$PropertyType": true,
    "process": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    /* Errors */
    "no-undef": 2,
    "no-cond-assign": 2,
    "no-const-assign": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-ex-assign": 2,
    "no-func-assign": 2,
    "no-inner-declarations": 2,
    "no-invalid-regexp": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-no-duplicate-props": 2,
    "react/no-did-update-set-state": 2,
    "react/no-direct-mutation-state": 2,
    "react/no-unknown-property": 2,

    /* Warnings */
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "comma-dangle": [1, "always-multiline"],
    "curly": 1,
    "indent": [1, 2, {"SwitchCase": 1}],
    "jsx-quotes": [1, "prefer-double"],
    "keyword-spacing": 1,
    "linebreak-style": [1, "unix"],
    "no-console": [1, { allow: ["warn", "error", "debug", "info"] }],
    "no-extra-semi": 1,
    "no-multi-spaces": 1,
    "no-multiple-empty-lines": [1, {max: 1}],
    "no-restricted-globals": [1, "Promise", "Image"],
    "no-spaced-func": 1,
    "no-unused-vars": [1, {"vars": "all", "args": "none", "varsIgnorePattern": "React"}],
    "no-var": 1,
    "object-curly-spacing": 1,
    "prefer-const": 1,
    "semi-spacing": [1, {"before": false, "after": true}],
    "semi": [1, "always"],
    "valid-typeof": 1,
    "babel/object-curly-spacing": 1,
    "react/jsx-curly-spacing": [1, "never"],
    "react/jsx-uses-vars": 2,
    "react/prefer-es6-class": 1,

    /* Disabled */
    "strict": 0,
    "eqeqeq": 0,
    "react/prop-types": 0,
    "react/no-multi-comp": 0
  }
}
